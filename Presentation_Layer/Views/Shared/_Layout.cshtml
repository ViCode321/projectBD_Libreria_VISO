<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title</title> <!-- Muestra el título de la página -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />
    <link href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css" rel="stylesheet" />
    
    <link href="~/Content/css/layout.css" rel="stylesheet">
    <link href="~/Content/css/style.css" rel="stylesheet">
    <style>
        /* Estilo inicial de los íconos */
        .inconic {
            transition: all 0.1s ease-in-out;
        }
            .inconic:hover {
                transform: scale(1.2);
                color: #ffffff;
            }
        
    </style>
</head>
<body id="body-pd">
    <header class="header" id="header">
        <div class="header_toggle">
            <i class="bx bx-menu" id="header-toggle"></i>
        </div>
        <!--<div class="header_img">
            <img src="~/images/cj.webp" alt="" />
            <i class="bx bx-search-alt nav_icon"></i>
            <span class="nav_logo-name">VISO</span>
        </div>-->
    </header>
    <div class="l-navbar" id="nav-bar">
        <!--<nav class="">-->
        <nav class="nav">
            <div>
                <a href="/Home/Index" class="nav_logo inconic">
                    <i class="bx bx-layer nav_logo-icon"></i>
                    <span class="nav_logo-name">Librería VISO</span>
                </a>
                <div class="nav_list">
                    <!--<a href="#" class="nav_link active">-->
                    <a href="/Home/Search" class="nav_link inconic">
                        <i class="bx bx-search-alt nav_icon"></i> <!-- Cambia el icono a buscar -->
                        <span class="nav_name">Buscar Producto</span>
                    </a>
                    <a href="/Home/Sale" class="nav_link inconic">
                        <i class="bx bx-cart nav_icon"></i> <!-- Cambia el icono a ventas -->
                        <span class="nav_name">Ventas</span>
                    </a>
                    <a href="#" class="nav_link dropdown-toggle dropdown-toggle-split inconic" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bx bx-archive-in nav_icon"></i>
                        <span class="nav_name">Inventario</span>
                    </a>
                    <ul class="dropdown-menu inconic" aria-labelledby="navbarDropdown">
                        <li> <a class="dropdown-item inventory-option" href="/Home/Insert"><i class="bx bx-plus-circle"></i> Insertar Producto</a></li>
                        <li><a class="dropdown-item inventory-option" href="/Home/Update"><i class="bx bx-edit"></i> Actualizar Producto</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>
    <div class="height-100 bg-light">
        @RenderBody() <!--Aquí se insertará el contenido de la vista que utiliza este diseño -->
    </div>
    <script src="~/Scripts/Scripts/_layout.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"
            integrity="sha256-oP6HI/t1f1z9Ls8eO7Z/YZ3Hc7pNfEEpz2oTbuMf3EY="
            crossorigin="anonymous"></script>
</body>
</html>