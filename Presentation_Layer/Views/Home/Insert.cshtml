@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Insert";
}

@model List<Model_Layer.Product>

<div class="container text-center">
    <div class="row">
        <div class="col-12">
            <h1 class="display-4">Insertar Producto</h1>
        </div>
    </div>
    <form method="post" action="@Url.Action("Insert")">
        <div class="row">
            <div class="col-6 mt-2">
                <!-- 4 inputs a la izquierda -->
                <!--<div class="form-group d-flex align-items-center mt-2">
                    <label for="input1" class="w-25">ID:</label>
                    <input type="number" id="id" name="id" class="form-control w-75" placeholder=0>
                    @Html.ValidationMessage("Id", "", new { @class = "text-danger" })
                </div>-->
                <div class="form-group d-flex align-items-center mt-2">
                    <label for="input2" class="w-25">Proveedor:</label>
                    <select id="proveedor" name="proveedor" class="form-control select w-75">
                        <option value="">Seleccione una opción</option>
                        <option value="1">Gonper</option>
                        <option value="2">Hispamer</option>
                    </select>
                </div>
                <div class="form-group d-flex align-items-center mt-2">
                    <label for="input3" class="w-25">Descripción del Producto:</label>
                    <input type="text" id="name" name="name" class="form-control w-75" placeholder="Descripción">
                    @Html.ValidationMessage("name", new { @class = "text-danger" })
                </div>
                <div class="form-group d-flex align-items-center mt-2">
                    <label for="input4" class="w-25">Marca:</label>
                    <select id="marca" name="marca" class="form-control select w-75">
                        <option value="">Seleccione una opción</option>
                        <option value="marca1">Marca 1</option>
                        <option value="marca2">Marca 2</option>
                    </select>
                </div>
                <div class="form-group d-flex align-items-center mt-2">
                    <label for="input5" class="w-25">Categoria:</label>
                    <select id="categoria" name="categoria" class="form-control select w-75">
                        <option value="">Seleccione una opción</option>
                        <option value="categoria1">Categoria 1</option>
                        <option value="categoria2">Categoria 2</option>
                    </select>
                </div>
            </div>
            <!--4 Inputs a la derecha-->
            <div class="col-6 mt-2">
                <div class="form-group d-flex align-items-center mt-2">
                    <label for="amount" class="w-25">Cantidad:</label>
                    <input type="text" id="amount" name="amount" class="form-control w-75" placeholder="0">
                    @Html.ValidationMessage("amount", new { @class = "text-danger" })
                </div>
                <div class="form-group d-flex align-items-center mt-2">
                    <label for="input2" class="w-25">Costo:</label>
                    <input type="text" id="amount" name="amount" class="form-control w-75" placeholder=0>
                    @Html.ValidationMessage("Costo", "", new { @class = "text-danger" })
                </div>
                <div class="form-group d-flex align-items-center mt-2">
                    <label for="input3" class="w-25">Precio:</label>
                    <input type="number" id="price" name="price" class="form-control w-75" placeholder=0>
                    @Html.ValidationMessage("Precio", "", new { @class = "text-danger" })
                </div>
                <div class="form-group d-flex align-items-center mt-2">
                    <label for="input4" class="w-25">Total Producto:</label>
                    <input type="text" id="total" name="total" class="form-control w-75" placeholder=0 readonly>
                </div>
            </div>
        </div>

        <!--Botón de búsqueda-->
        <div class="row justify-content-center">
            <div class="col-6 mt-2">
                <button type="submit" class="btn btn-primary w-100 m-4">
                    <i class="bx bx-plus"></i> Agregar
                </button>
            </div>
        </div>
    </form>
    <!--Tabla se resultados-->
    <div class="row">
        <div class="col-12 mt-4">
            <table class="table table-bordered table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Código</th>
                        <th>Descripción</th>
                        <th>Proveedor</th>
                        <th>Categoría</th>
                        <th>Marca</th>
                        <th>Cantidad</th>
                        <th>Costo</th>
                        <th>Precio</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var producto in Model)
                        {
                            <tr>
                                <td>@producto.Id</td>
                                <td onclick="activarEdicion(this)" data-id="@producto.Id" data-columna="Descripcion">@producto.Descripcion</td>
                                <td onclick="activarEdicion(this)" data-id="@producto.Id" data-columna="Proveedor">@producto.ProveedorNombre</td>
                                <td onclick="activarEdicion(this)" data-id="@producto.Id" data-columna="Categoria">@producto.CategoriaNombre</td>
                                <td onclick="activarEdicion(this)" data-id="@producto.Id" data-columna="Marca">@producto.MarcaNombre</td>
                                <td onclick="activarEdicion(this)" data-id="@producto.Id" data-columna="Cantidad">@producto.Cantidad</td>
                                <td onclick="activarEdicion(this)" data-id="@producto.Id" data-columna="Costo">@producto.Costo</td>
                                <td onclick="activarEdicion(this)" data-id="@producto.Id" data-columna="Precio">@producto.Precio</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="9">
                                @if (!string.IsNullOrEmpty(ViewBag.NoResultsMessage) || ViewData.ModelState["searchBy"] != null)
                                {
                                    @ViewBag.NoResultsMessage
                                }
                                else
                                {
                                    @:No se encontraron resultados.
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>


</div>